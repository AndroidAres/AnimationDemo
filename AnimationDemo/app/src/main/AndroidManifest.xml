<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ares.animationdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AlphaAnimationActivity"
            android:label="AlphaAnimationActivity"/>
        <activity android:name=".activity.RotateAnimationActivity"
            android:label="RotateAnimationActivity"/>
        <activity android:name=".activity.ScaleAnimationActivity"
            android:label="ScaleAnimationActivity"/>
        <activity android:name=".activity.TranslateAnimationActivity"
            android:label="TranslateAnimationActivity"/>
    </application>

</manifest>